<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:padding="40dp">

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtTitle"
        android:textSize="30sp"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/imageViewImportant"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_warning_black_24dp"
        android:id="@+id/imageViewImportant"
        android:layout_marginTop="39dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/imageViewTodo"
        android:layout_toEndOf="@+id/imageViewTodo" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_check_box_outline_blank_black_24dp"
        android:id="@+id/imageViewTodo"
        android:layout_above="@+id/txtTitle"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_lightbulb_outline_black_24dp"
        android:id="@+id/imageViewIdea"
        android:layout_alignTop="@+id/imageViewImportant"
        android:layout_toRightOf="@+id/imageViewImportant"
        android:layout_toEndOf="@+id/imageViewImportant" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtDescription"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/txtTitle"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnOk"
        android:layout_below="@+id/txtDescription"
        android:layout_toRightOf="@+id/imageViewIdea"
        android:layout_toEndOf="@+id/imageViewIdea"
        android:layout_marginLeft="14dp"
        android:layout_marginStart="14dp"
        android:layout_marginTop="95dp" />
</RelativeLayout>